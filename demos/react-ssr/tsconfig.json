{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": [
    "app/*.ts",
    "app/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}